// ***
// GLOBAL STYLES
// ***

// VARIABLES
$link-color: {{ settings.links-color }};
$border-color: {{ settings.border-color }};
$website-width: {{ settings.website-width }}px;

$sm: 640px;
$md: 768px;
$lg: 1024px;
$xl: 1280px;

// CUSTOM CSS FILE
// @import 'custom.scss.css'

// ***
// UTILITY CLASSES
// ***
.m-0 {
	margin: 0 !important;
}



.shopify-section:not(#shopify-section-header):not(#shopify-section-announcement-bar) + :not(#hero) {
	margin: 35px 0;

	@media (min-width: $lg) {
		margin: 75px 0;
	}
}

.page-width {
	max-width: $website-width;
	margin: 0 auto;
}
a {
	color: $link-color;
}



// ***
// HEADER
// ***
.header--icons {
	display: flex;
	justify-content: flex-end;
	align-items: center;

	a {
		text-decoration: none;
	}

	.header-cart {
		position: relative;
		
		.cart-item-count {
			position: absolute;
			display: flex;
			justify-content: center;
			align-items: center;
			font-size: 10px;
			color: #333;
			background: #f3f3f3;
			height: 15px;
			width: 15px;
			border-radius: 100px;
			top: -4px;
			right: -7px;
		}
	}
}



// GRID COLLECTION
.grid-collection {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  grid-gap: 12px;
  margin: 1em;
  background-color: white;
}

.grid-product {
  display: grid;
	justify-content: center;
	text-align: center;
	position: relative;
  padding: 8px;
	line-height: 1;
	border: 1px solid $border-color;
  border-radius: 5px;
}


// badges
.badge--out-of-stock {
	position: absolute;
}

// cart page
.cart-table {
	width: 100%;
}