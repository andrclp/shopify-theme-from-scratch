{% assign featured_collection = collections[section.settings.featured_collection_picker] %}

{% for product in featured_collection.products %}
	{% render 'product-item' product: product %}
{% else %}
	<p>no matches</p>
{% endfor %}


{% schema %}
	{
		"name": "Collection",
		"settings": [
			{
				"type":      "collection",
				"id":        "featured_collection_picker",
				"label":     "Select collection"
			}
		],
		"presets": [
			{
				"category": "Custom Content",
				"name": "Featured collection"
			}
		]
	}
{% endschema %}