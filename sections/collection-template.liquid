{% paginate collection.products by section.settings.pagination %}
    <h1>{{ collection.title }}</h1>
    {% for product in collection.products %}
			{% render 'product-item' %}
    {% else %}
        <p>no matches</p>
    {% endfor %}
    
    {% if paginate.pages > 1 %}
        {{ paginate | default_pagination }}
    {% endif %}
{% endpaginate %}

{% schema %}
	{
		"name": "Collection",
		"settings": [
			{
				"type":   "range",
				"id":     "pagination",
				"min":       4,
				"max":       24,
				"step":      4,
				"label":     "Products per page",
				"default":   4
			}
		]
	}
{% endschema %}

