<!doctype html>
<html>
<head>
  <title>{{ page_title }}</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="{{ page_description | escape }}">
  <link rel="canonical" href="{{ canonical_url }}">
	<meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">

	<!-- Header hook for plugins -->
	{{ content_for_header }} 
	
	<!-- load css files -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css" integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I" crossorigin="anonymous">
	{{ 'grid.scss.css' | asset_url | stylesheet_tag }}
	{{ 'theme.scss.css' | asset_url | stylesheet_tag }}
	{{ 'goCart.scss.css' | asset_url | stylesheet_tag }}
</head>
<body class="template-{{ template | split: '.' | first }}">

	{% section 'announcement-bar' %}
	{% section 'header' %}

  <main role="main">
    {{ content_for_layout }}
  </main>

	{% section 'footer' %}

	<!-- load script files -->
	{{ '//code.jquery.com/jquery-3.5.1.min.js' | script_tag }}
	{{ 'lazysizes.js' | asset_url | script_tag }}
	{{ 'theme.js' | asset_url | script_tag }}

	<!-- go cart items -->
	{%- section 'goCart' -%}

	{{ 'goCart.js' | asset_url | script_tag }}
	
	<script>
		var goCart = new GoCart(
			{
				cartMode: 'drawer', //drawer or mini-cart  
				drawerDirection: 'right', //cart drawer from left or right
				displayModal: false, //display success modal when adding product to cart
			}
		);
	</script>
	<!-- go cart items -->

</body>
</html>